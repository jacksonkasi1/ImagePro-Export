{
  "dependencies": {
    "@create-figma-plugin/ui": "^3.2.0",
    "@create-figma-plugin/utilities": "^3.2.0",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lucide-preact": "^0.379.0",
    "preact": ">=10",
    "react": "npm:@preact/compat",
    "react-dom": "npm:@preact/compat",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@create-figma-plugin/build": "^3.2.0",
    "@create-figma-plugin/tsconfig": "^3.2.0",
    "@figma/plugin-typings": "1.90.0",
    "concurrently": ">=8",
    "tailwindcss": ">=3",
    "typescript": ">=4"
  },
  "scripts": {
    "build": "bun run build:css && bun run build:js",
    "build:css": "tailwindcss --input ./src/styles/main.css --output ./src/styles/out/output.css",
    "build:js": "build-figma-plugin --typecheck --minify",
    "watch": "bun run build:css && concurrently bun:watch:css bun:watch:js",
    "dev": "bun run build:css && concurrently bun:watch:css bun:watch:js",
    "watch:css": "tailwindcss --input ./src/styles/main.css --output ./src/styles/out/output.css --watch",
    "watch:js": "build-figma-plugin --typecheck --watch"
  },
  "figma-plugin": {
    "editorType": [
      "figma"
    ],
    "id": "imagepro-export",
    "name": "ImagePro Export",
    "main": "src/main.ts",
    "ui": "src/ui.tsx"
  }
}
